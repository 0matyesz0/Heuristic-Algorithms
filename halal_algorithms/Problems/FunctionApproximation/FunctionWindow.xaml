<Window x:Class="Problems.FunctionApproximation.FunctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problems.FunctionApproximation"
        xmlns:ChartToolKit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="FunctionWindow" Height="700" Width="1200">
    <Window.Resources>
        <local:FunctionViewModel x:Key="VM"/>
    </Window.Resources>
    <Canvas DataContext="{StaticResource VM}" x:Name="testCanvas">
        <Label Content="{Binding FunctionFitness}"/>
        <ChartToolKit:Chart Height="700" Width="1200">
            <ChartToolKit:LineSeries ItemsSource="{Binding ApproxFunctionChart.DataList}"
            IndependentValuePath="Key"  
            DependentValuePath="Value" 
            Title="Approxing Series">

            </ChartToolKit:LineSeries>
            <ChartToolKit:LineSeries ItemsSource="{Binding TargetfunctionChart.DataList}"   
            IndependentValuePath="Key"  
            DependentValuePath="Value" 
            Title="Target Series">
                
            </ChartToolKit:LineSeries>
        </ChartToolKit:Chart>
    </Canvas>
</Window>
